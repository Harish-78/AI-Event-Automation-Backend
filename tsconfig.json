{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    
    // REMOVE or COMMENT OUT the line below so TS finds types for cors, passport, etc.
    // "types": ["node", "express"], 

    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true,
    
    // You don't really need declaration files for a backend app, but it won't hurt
    "declaration": true, 
    "declarationMap": true,
    
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}